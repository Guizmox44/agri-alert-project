{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    {% include ('application/slidenav.html.twig') %}
    {% for message in app.flashes('profil') %}
        <div class="alert alert-success" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="alert-heading">Profil</h4>
            <p>{{ message }}</p>
        </div>
    {% endfor %}
    <img class="mx-auto d-block mt-5" src="{{ asset('images/logo/agri-200.png') }}" alt="logo-agri-alerte">
    <div class="shadow-lg rounded container form-container mt-5">


        <table class="table table-striped table-hoverable mt-2 text-center product" id="{{ user.id }}" >

            <thead><tr><th colspan="2" class="shadow-lg bg-light h4"><a href="{{ path('admin_user_show', { 'id': user.id }) }}">{{ user.username|upper }} {{ user.lastname|upper }}</a></th></tr></thead>

            <tbody>
            <tr><th>Email</th><td>{{ user.email }}</td></tr>
            <tr><th>Siret</th><td>{{ user.siret }}</td></tr>
            <tr><th>Numero cheptel</th><td>{{ user.numberLivestock }}</td></tr>
            <tr><th>Adresse</th><td>{{ user.address }}</td></tr>
            <tr><th>Code postal</th><td>{{ user.zipCode }}</td></tr>
            <tr><th>Ville</th><td>{{ user.city }}</td></tr>
            <tr><th>Actions</th>
                <td>

                    <a href="{{ path('profil_edit') }}" class="shadow-lg badge badge-success p-2">modifier</a>
                </td>
            </tr>
            </tbody>
        </table>


    </div>



{% endblock %}