{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    {% include ('application/slidenav.html.twig') %}
    <img class="mx-auto d-block mt-5" src="{{ asset('images/logo/agri-200.png') }}" alt="logo-agri-alerte">

    <div class="container form-container mt-5">
    <h2 class="mt-5">Mise Ã  jour profil</h2>
    <div class="container mt-5">
        {{ form_start(form, {'attr': {'novalidate' : 'novalidate'}}) }}
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-md-4">
                {{ form_label(form.username) }}
                {{ form_widget(form.username) }}
                <div class="form-container-error">{{ form_errors(form.username) }}</div>
            </div>
            <div class="col-md-4">
                {{ form_label(form.lastName) }}
                {{ form_widget(form.lastName) }}
                <div class="form-container-error">{{ form_errors(form.lastName) }}</div>

            </div>
            <div class="col-md-4">
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
                <div class="form-container-error">{{ form_errors(form.email) }}</div>
            </div>
        </div>
        <div class="row form-container-spacing">
            <div class="col-md-6">
                {{ form_label(form.password.first) }}
                {{ form_widget(form.password.first) }}
                <div class="form-container-error">{{ form_errors(form.password.first) }}</div>
            </div>
            <div class="col-md-6">
                {{ form_label(form.password.second) }}
                {{ form_widget(form.password.second) }}
                <div class="form-container-error">{{ form_errors(form.password.second) }}</div>
            </div>
        </div>
        <div class="row form-container-spacing">
            <div class="col-md-4 ">
                {{ form_label(form.address) }}
                {{ form_widget(form.address) }}
                <div class="form-container-error">{{ form_errors(form.address) }}</div>
            </div>
            <div class="col-md-4">
                {{ form_label(form.city) }}
                {{ form_widget(form.city) }}
                <div class="form-container-error">{{ form_errors(form.city) }}</div>
            </div>
            <div class="col-md-4">
                {{ form_label(form.zipCode) }}
                {{ form_widget(form.zipCode) }}
                <div class="form-container-error">{{ form_errors(form.zipCode) }}</div>
            </div>
        </div>
        <div class="row form-container-spacing">
            <div class="col-md-6">
                {{ form_label(form.siret) }}
                {{ form_widget(form.siret) }}
                <div class="form-container-error">{{ form_errors(form.siret) }}</div>
            </div>
            <div class="col-md-6">
                {{ form_label(form.numberLivestock) }}
                {{ form_widget(form.numberLivestock) }}
                <div class="form-container-error">{{ form_errors(form.numberLivestock) }}</div>
            </div>
        </div>
        <div class="row form-container-spacing">
            <div class="col-md-6 text-center">
                {{ form_label(form.agreeTerms) }}
                {{ form_widget(form.agreeTerms) }}
                <div class="form-container-error">{{ form_errors(form.agreeTerms) }}</div>
            </div>
        </div>
        <input class="mt-4 mb-3 btn btn-sm p-2 button-style-orange" type="submit" value="Modifier">
        {{ form_end(form) }}

    </div>
    </div>


{% endblock %}