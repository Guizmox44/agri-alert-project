

<div class="container form-container mt-3 pl-3">
    <a class="d-flex justify-content-between align-items-center pr-5" data-toggle="collapse" data-target="#collapse-form-calendar-add">
        <h2 id="calendar-form-title">Ajout d'événement</h2>
        <i class="fas fa-plus fa-spin fa-2x float-right"></i>
    </a>
    <div class="container mt-3 collapse p-0" id="collapse-form-calendar-add">
        {{ form_start(add_form,{'action': path('calendar_add'), 'method': 'POST'}) }}
        {{ form_errors(add_form) }}
        <div class="row">
            <div class="col-md-4">
                {{ form_label(add_form.title) }}
                {{ form_widget(add_form.title) }}
                <div class="form-container-error">{{ form_errors(add_form.title) }}</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mt-3">
                {{ form_label(add_form.day) }}
                {{ form_widget(add_form.day) }}
                <div class="form-container-error">{{ form_errors(add_form.day) }}</div>

            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                {{ form_label(add_form.message) }}
                {{ form_widget(add_form.message) }}
                <div class="form-container-error">{{ form_errors(add_form.message) }}</div>
            </div>
        </div>



        <input class="mt-4 mb-5 p-2 button-style-orange" type="submit" value="Ajouter">
        {{ form_end(add_form) }}

    </div>
    <hr>

</div>
