{% extends 'base.html.twig' %}

{% block body %}
    {% include ('application/slidenav.html.twig') %}

    <div class="container w-80 m-auto">
        <h1 class=" text-center text-dark">{{ animal.earTag }}</h1>
        <div class="container table-responsive-md form-container mt-5 rounded ">
            <table class="table  table-hoverable mt-2">
                <tbody>
                <tr>
                    <th>Identification</th>
                    <td>{{ animal.earTag|upper }}</td>
                </tr>
                <tr>
                    <th> Date d'arriv√©e </th>
                    <td>{{ animal.arrivedAt|date('d:m:Y')}}</td>
                </tr>
                <tr>
                    <th> Date de naissance </th>
                    <td>{{ animal.birthDate|date('d:m:Y')}}</td>
                </tr>
                <tr>
                    <th> Date de sortie </th>
                    <td>{{ animal.slaughterAt|date('d:m:Y')}}</td>
                </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-between">
                <a href="{{ path('cheptel_species', {'tag' : tag}) }}" class="btn btn-sm btn-secondary mb-1">Retour liste</a>

                <a href="{{ path('cheptel_edit', {'tag' : tag, 'id' : animal.id}) }}" class="btn btn-sm btn-success mb-1">Modifier</a>
            </div>
        </div>
    </div>

{% endblock %}


