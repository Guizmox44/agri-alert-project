{% extends 'base.html.twig' %}

{% block body %}

    <div class="container form-container mt-5">
        <div class="col-8 col-lg-6 mx-auto">
            <h1 class="mt-lg-5">Modification utilisateur</h1>
            {{ form_start(edit_form, {'attr': {'novalidate' : 'novalidate'}}) }}
            {{ form_widget(edit_form) }}

        </div>

        <div class="d-flex flex-column d-md-flex flex-md-row justify-content-between p-3">
            <a href="{{ path('admin_user') }} " class="btn btn-secondary mb-1">Retour liste</a>

            <input type="submit" class="btn btn-success mb-1" value="Modifier" />
            {{ form_end(edit_form) }}

            {{ form_start(delete_form) }}
            <input class="btn btn-danger mx-auto w-100" type="submit" value="Supprimer">
            {{ form_end(delete_form) }}

        </div>

    </div>
{% endblock %}
