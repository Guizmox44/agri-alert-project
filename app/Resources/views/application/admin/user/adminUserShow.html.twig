{% extends 'base.html.twig' %}

{% block body %}

    <div class="shadow-lg rounded container form-container mt-5">
        <a href="{{ path('admin_user') }} " class="btn btn-secondary mb-1 mt-2">Retour liste</a>

            <table class="table table-striped table-hoverable mt-2 text-center product" id="{{ user.id }}" >

                <thead><tr><th colspan="2" class="shadow-lg bg-light h4"><a href="{{ path('admin_user_show', { 'id': user.id }) }}">{{ user.username|upper }} {{ user.lastname|upper }}</a></th></tr></thead>

                <tbody>
                <tr><th>Email</th><td>{{ user.email }}</td></tr>
                <tr><th>Siret</th><td>{{ user.siret }}</td></tr>
                <tr><th>Numero cheptel</th><td>{{ user.numberLivestock }}</td></tr>
                <tr><th>Adresse</th><td>{{ user.address }}</td></tr>
                <tr><th>Code postal</th><td>{{ user.zipCode }}</td></tr>
                <tr><th>Ville</th><td>{{ user.city }}</td></tr>
                <tr><th>Actions</th>
                    <td>

                        <a href="{{ path('admin_user_edit', { 'id': user.id }) }}" class="shadow-lg badge badge-success p-2">modifier</a>
                    </td>
                </tr>
                </tbody>
            </table>


    </div>
{% endblock %}