{% extends 'base.html.twig' %}

{% block body %}

    <div class="container w-80 m-auto">



                {% for user in messages %}
                        {% for message in user.messages %}
                        <div class="shadow-lg rounded container form-container mt-5">
                            <table class="table table-striped table-hoverable mt-2 text-center" >
                                <thead>
                                    <tr>
                                    <th>Utilisateur</th>
                                    <th colspan="3"><a href="{{ path('admin_message_chat', {'id' : message.id}) }}">{{ user|upper }}</a></th>
                                    </tr>
                                 </thead>
                                <tbody>
                                    <tr><th>Date de création</th> <td>{{ message.createdAt|date('d:m:Y') }}</td></tr>
                                    <tr><th>Description</th><th colspan="3">Message</th></tr>
                                    <tr>
                                        <td>{{ message.sujet }}</td>
                                        <td colspan="3" class="bg-white text-dark">{{ message.description }}</td>
                                    <tr>
                                    <th>Actions</th><td><a href="{{ path('admin_message_chat', {'id' : message.id}) }}" class="shadow badge badge-success">Répondre</a></td>
                                    </tr>
                                </tbody>
                            </table>
                            <hr>
                        </div>
                        {% endfor %}
                {% endfor %}
            <div class="d-flex justify-content-between">
                <a href="{{ path('admin') }} " class="btn btn-secondary mb-1">Retour menu</a>
            </div>

    </div>


{% endblock %}