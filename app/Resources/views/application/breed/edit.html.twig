                {{ form_end(delete_form) }}
            </div>
        </div>
        <div class="d-none d-md-block">
            <div class="d-flex justify-content-around pb-1">
                <a href="{{ path('breed_index', { 'id': breed.id}) }}" class="btn btn-secondary fas fa-arrow-circle-left"> Retour</a>
                <button class="btn btn-success fas fa-edit" type="submit" > Valider</button>
                {{ form_end(edit_form) }}
                {{ form_start(delete_form) }}
                <button class="btn btn-danger fas fa-trash" type="submit"> Supprimer</button>
                {{ form_end(delete_form) }}
            </div>
        </div>

    </div>
{% endblock %}