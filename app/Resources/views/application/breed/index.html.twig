{% extends 'base.html.twig' %}
{% block body %}
    {% include ('application/slidenav.html.twig') %}

    <div class="d-sm-block d-md-none">
        <div class="container w-80 m-auto">
            <h1 class="text-center text-dark">Liste des animaux de la race {{ breed.wording }}</h1>
            <div class="container form-container mt-5">
                <div class="row mb-2 button-nav-breed">
                    <div class="d-flex justify-content-between">
                        <div class="col-4">
                            <a href="{{ path('animal_new') }}" type="button" class="btn btn-primary fas fa-plus-circle"> Animal</a>
                        </div>
                        <div class="col-3">
                            <a href="{{ path('breed_edit', { 'id': breed.id }) }}" type="button" class="btn btn-success fas fa-edit"> Race</a>
                        </div>
                        <div class="col-3 btn-back">
                            <a href="{{ path('species_dash') }}" type="button" class="btn btn-secondary fas fa-arrow-circle-left"></a>
                        </div>
                    </div>
                </div>
                    {% for animal in animals %}
                    <table class="table table-striped table-hoverable mt-2 text-center">
                        <th colspan="2" class="bg-light">
                            <a href="{{ path('animal_show', { 'id': animal.id }) }}">{{ animal.earTag }}</a>
                        </th>
                        <tbody>
                        <tr><th>Arrivé le </th><td>{% if animal.arrivedAt %}{{ animal.arrivedAt|date('Y-m-d') }}{% endif %}</td></tr>
                        <tr><th>Naissance</th><td>{% if animal.birthDate %}{{ animal.birthDate|date('Y-m-d') }}{% endif %}</td></tr>
                        <tr><th>Abattu le</th><td>{% if animal.slaughterAt %}{{ animal.slaughterAt|date('Y-m-d') }}{% endif %}</td></tr>
                        <tr><th>Actions</th><td>
                                <a href="{{ path('animal_show', { 'id': animal.id }) }}" type="button" class="btn btn-primary fas fa-eye mr-2"></a>
                                <a href="{{ path('animal_edit', { 'id': animal.id }) }}" type="button" class="btn btn-success far fa-edit"></a>
                            </td></tr>
                        </tbody>
                    </table>
                        <hr>
                    {% endfor %}
            </div>
        </div>
    </div>

    <div class="d-none d-md-block">
        <div class="container w-80 m-auto">
            <h1 class="text-center text-dark">Liste des animaux de la race {{ breed.wording }}</h1>
            <div class="container form-container mt-5">
                <div class="d-flex mt-2 justify-content-around">
                    <a href="{{ path('animal_new') }}" type="button" class="btn btn-primary fas fa-plus-circle"> Animal</a>
                    <a href="{{ path('breed_edit', { 'id': breed.id }) }}" type="button" class="btn btn-success fas fa-edit"> Race</a>
                    <a href="{{ path('species_dash') }}" type="button" class="btn btn-secondary fas fa-arrow-circle-left"> Retour</a>
                </div>
                <table class="table table-striped table-hoverable mt-2">
                    <thead>
                    <tr>
                        <th>Identification</th>
                        <th>Arrivé le</th>
                        <th>Date d'anniversaire</th>
                        <th>Alert</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for animal in animals %}
                        <tr>
                            <td><a href="{{ path('animal_show', { 'id': animal.id }) }}">{{ animal.earTag }}</a></td>
                            <td>{% if animal.arrivedAt %}{{ animal.arrivedAt|date('Y-m-d') }}{% endif %}</td>
                            <td>{% if animal.birthDate %}{{ animal.birthDate|date('Y-m-d') }}{% endif %}</td>
                            <td>{% if animal.slaughterAt %}{{ animal.slaughterAt|date('Y-m-d') }}{% endif %}</td>
                            <td>
                                <div class="d-flex justify-content-start">
                                    <a href="{{ path('animal_show', { 'id': animal.id }) }}" type="button" class="btn btn-primary fas fa-eye mr-2"></a>
                                    <a href="{{ path('animal_edit', { 'id': animal.id }) }}" type="button" class="btn btn-success far fa-edit"></a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
