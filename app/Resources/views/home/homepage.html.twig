{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid" id="homepage-hero">

        {% for message in app.flashes('signin') %}
            <div class="alert alert-success" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="alert-heading">Bienvenue</h4>
                <p>{{ message }}</p>
                <hr>
                <p class="mb-0"><a href="{{ path('login') }}">Connectez-vous</a></p>
            </div>
        {% endfor %}

        <div id="homepage-hero-text">
            <img class=" mx-auto d-block mt-5" src="{{ asset('images/logo/agri-200.png') }}" alt="logo-agri-alerte">
            <h1 class="mt-3">Agri Alert</h1>
            <h2 class="mt-5 mb-5" id="punch-line">L'assistant personnel des agriculteurs</h2>

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="mt-5 button-style-orange" id="button_homepage" href="{{ path('dashboard') }}">Bienvenue {{ app.user }}</a>
            {% else %}
                <a class="mt-5 button-style-orange" id="button_homepage" href="{{ path('signin') }}">S'inscrire</a>
            {% endif %}
        </div>

    </div>
{% endblock %}